{
  "manifest_version": 3,
  "name": "YouTube Auto Pause",
  "version": "1.0",
  "description": "Automatically pauses YouTube videos when you switch tabs and resumes when you return",
  "permissions": [
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/pause16.png",
      "48": "icons/yt48.png",
      "128": "icons/play128.png"
    }
  },
  "icons": {
    "16": "icons/pause16.png",
    "48": "icons/yt48.png",
    "128": "icons/play128.png"
  }
}